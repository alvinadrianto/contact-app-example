<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mt-2 mb-3">Tambah Data Contact</a>
      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">NoHP</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">Data Contact belum ada.</div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact, i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHP %></td>
            <td>
              <a href="/contact/<%= contact.nama %> " class="btn btn-primary badge rounded-pill"><i class="bi bi-info-circle"></i> Details</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
