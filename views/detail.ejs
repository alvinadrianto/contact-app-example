<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data Contact tidak ada. <br />
        <a href="/contact" class="alert-link fw-normal">&laquo; Back to Contact</a>
      </div>
      <% } else {%>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-warning badge rounded-pill">Edit</a>
          <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge rounded-pill" onclick="return confirm('Yakin dihapus?')">Remove</a> -->
          <form method="POST" action="/contact?_method=DELETE" class="d-inline-block">
            <input type="hidden" name="nama" value="<%= contact.nama %>" />
            <button type="submit" class="btn btn-danger badge rounded-pill" onclick="return confirm('Yakin dihapus?')">Remove</button>
          </form>
          <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
